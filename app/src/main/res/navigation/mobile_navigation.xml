<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">



    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.test.cleanArchRoomTest.application.peresentation.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_episodesFragment"
            app:destination="@id/episodesFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.test.cleanArchRoomTest.application.peresentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.test.cleanArchRoomTest.application.peresentation.notification.NotificationFragment"
        android:label="NotificationFragment"
        tools:layout="@layout/fragment_notifications"/>
    <fragment
        android:id="@+id/episodesFragment"
        android:name="com.test.cleanArchRoomTest.application.peresentation.dashboard.episode.EpisodesFragment"
        android:label="episodes_fragment"
        tools:layout="@layout/episodes_fragment" >
        <argument
            android:name="characterId"
            android:defaultValue="None" />
    </fragment>

</navigation>